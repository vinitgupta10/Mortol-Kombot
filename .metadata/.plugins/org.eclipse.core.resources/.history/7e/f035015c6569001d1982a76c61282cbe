#include "ai.h"


void ai_mover(int count, WORD keycode) {
//	if (count % 100000
	int x = rand() % 6;
	if (keycode == 26) {			//W
		if (x == 0) {
			vga_ctrl->VRAM[0] = 14;
		} else if (x == 1) {
			vga_ctrl->VRAM[0] = 19;
		} else if (x < 4) {
			vga_ctrl->VRAM[0] = 07;
		} else {
			vga_ctrl->VRAM[0] = 04;
		}
	} else if (keycode == 22) {		//S
		if (x == 0) {
			vga_ctrl->VRAM[0] = 26;
		} else if (x == 1) {
			vga_ctrl->VRAM[0] = 22;
		} else if (x == 2) {
			vga_ctrl->VRAM[0] = 07;
		} else if (x == 3) {
			vga_ctrl->VRAM[0] = 04;
		} else if (x == 4) {
			vga_ctrl->VRAM[0] = 14;
		} else if (x == 5) {
			vga_ctrl->VRAM[0] = 19;
		}
	} else if (keycode == 07) {		//D
		if (x == 0) {
			vga_ctrl->VRAM[0] = 19;
		} else if (x == 1) {
			vga_ctrl->VRAM[0] = 26;
		} else if (x == 2) {
			vga_ctrl->VRAM[0] = 22;
		} else if (x == 3) {
			vga_ctrl->VRAM[0] = 07;
		} else if (x == 4) {
			vga_ctrl->VRAM[0] = 07;
		} else if (x == 5) {
			vga_ctrl->VRAM[0] = 07;
		}
	} else if (keycode == 04) {		//A
		if (x == 0) {
			vga_ctrl->VRAM[0] = 19;
		} else if (x == 1) {
			vga_ctrl->VRAM[0] = 26;
		} else if (x == 2) {
			vga_ctrl->VRAM[0] = 22;
		} else if (x == 3) {
			vga_ctrl->VRAM[0] = 07;
		} else if (x == 4) {
			vga_ctrl->VRAM[0] = 07;
		} else if (x == 5) {
			vga_ctrl->VRAM[0] = 07;
		}
	} else if (keycode == 14) {		//K
		if (x == 0) {
			vga_ctrl->VRAM[0] = 19;
		} else if (x == 1) {
			vga_ctrl->VRAM[0] = 26;
		} else if (x == 2) {
			vga_ctrl->VRAM[0] = 22;
		} else if (x == 3) {
			vga_ctrl->VRAM[0] = 07;
		} else if (x == 4) {
			vga_ctrl->VRAM[0] = 07;
		} else if (x == 5) {
			vga_ctrl->VRAM[0] = 07;
		}
	} else if (keycode == 19) {		//P
		if (x == 0) {
			vga_ctrl->VRAM[0] = 19;
		} else if (x == 1) {
			vga_ctrl->VRAM[0] = 26;
		} else if (x == 2) {
			vga_ctrl->VRAM[0] = 22;
		} else if (x == 3) {
			vga_ctrl->VRAM[0] = 07;
		} else if (x == 4) {
			vga_ctrl->VRAM[0] = 07;
		} else if (x == 5) {
			vga_ctrl->VRAM[0] = 07;
		}
	} else {
		if (x == 0) {
			vga_ctrl->VRAM[0] = 19;
		} else if (x == 1) {
			vga_ctrl->VRAM[0] = 26;
		} else if (x == 2) {
			vga_ctrl->VRAM[0] = 22;
		} else if (x == 3) {
			vga_ctrl->VRAM[0] = 07;
		} else if (x == 4) {
			vga_ctrl->VRAM[0] = 07;
		} else if (x == 5) {
			vga_ctrl->VRAM[0] = 07;
		}
	}
}
