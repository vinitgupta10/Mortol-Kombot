module box ( input        [9:0] PosX, PosY, DrawX, DrawY, SizeX, SizeY,
				 output logic [3:0]  Red, Green, Blue );
				 
		
		logic box_on;
		
always_comb 
begin
if ((DrawX - PosX) * (DrawY - PosY) <= SizeX * SizeY) 
	box_on = 1'b1;
else
	box_on = 1'b0;
end	
		
		
always_comb
begin
if (box_on)
	begin
		Red = 4'hF;
		Green = 4'hF;
		Blue = 4'hF;
	end
else
	begin
		Red = 4'h0;
		Green = 4'h0;
		Blue = 4'h0;
	end
end

endmodule
